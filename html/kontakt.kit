<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Company Webpage | Kontakt</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="dist/css/main.min.css" />
  </head>
  <body>
    <!--@include 'nav.kit'-->

    <main>
        <section class="contact">

            <h1 class="contact__header">Kontakt</h1>

            <div class="contact__box">
                <figure class="contact__img-box">
                    <img class="contact__img" src="https://cdn.pixabay.com/photo/2017/12/02/14/38/contact-us-2993000_1280.jpg" alt="Człowieka wybierający jedną z form kontaktu: email, telefon, list">
                </figure>
            </div>

            <form
          method="post"
          action="/dist/php/contact-section-form2.php"
          name="contact_form"
          class="form"
          id="contactOne"
        >
          <label class="form__label" for="name">Imię i nazwisko<sup class="form__star">&#9733;</sup> </label>
          <input class="form__input" type="text" name="name" placeholder="Imię" />

          <label class="form__label" for="email"
            >Adres E-mail <sup class="form__star">&#9733;</sup>
          </label>
          <input
            class="form__input"
            type="text"
            name="email"
            placeholder="imię.nazwisko@firma.com"
          />

          <label class="form__label" for="phone">Telefon</label>
          <input class="form__input" type="text" name="phone" placeholder="123-456-789" />

          <label class="form__label" for="company"
            >Nazwa Firmy <sup class="form__star">&#9733;</sup>
          </label>
          <input class="form__input" type="text" name="company" placeholder="Nazwa Firmy" />

          <label class="form__label" for="message"
            >Wiadomość: </sup>
          </label>
          <textarea name="message" class="form__text-area" placeholder="Wiadomość"></textarea>

          <input class="form__button" type="submit" name="submit" value="wyślij" />

        </form>
        </section>
    </main>
    <!--@include 'footer.kit'-->
  </body>
  <script src="/dist/js/main.min.js"></script>
</html>
